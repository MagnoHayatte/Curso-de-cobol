#include <iostream> (Isso é uma stream começa com IO de Imput e output)

using namespace std; (Std de standard)
System("pause") para pausar 

double decimal=[5,2225252522]; //Numerais decimais Ex: 2,555555555.
float decimal2=[5.2]; //converte decimais com menor precisão com separador decimal com ponto .Ex: 2.5
string nome='Magno Hayatte Mendonça casado com Joyce Lorrayne Ferreira dos Santos'; // recebe texto que será ifnromado entre aspas "".
printf("decimal");
printf("decimal2");
printf("string");
printf("vidas");
printf("letra");
printf("vivo");
